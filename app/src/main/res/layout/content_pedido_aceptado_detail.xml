                            android:layout_height="wrap_content"

                            android:layout_marginTop="8dp"
                            android:text="colonia"
                            android:textColor="#A2A2A2"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="cp"
                        android:textColor="#A2A2A2"
                        android:textSize="12sp" />

                </LinearLayout>


